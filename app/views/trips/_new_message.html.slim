.panel.panel-default
  .panel-heading New Post
  .panel-body
    = simple_form_for @message, url: group_posts_path(@group) do |f|
      = f.input :body, placeholder: "Tulis Postingan Kamu Di Sini", label: false, input_html: { class: "form-control", rows: 4 }

      
      .form-group
        = f.button :submit, 'Create Post', class: "btn3d btn btn-primary btn-md"  