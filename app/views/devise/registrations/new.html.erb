<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.input :username, autofocus: true, input_html: { class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.input :first_name, input_html: { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= f.input :last_name, input_html: { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= f.input :email, input_html: { class: "form-control" } %>
        </div>

        <div class="form-group">
           <h4><b>Photo</b></h4>
          <%= f.file_field :photo, input_html: { class: "form-control" } %>
        </div>

        <div class="form-group">
           <h4><b>Video</b></h4>
          <%= f.file_field :video, input_html: { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= f.input :gender, :collection => ['Male', 'Female'], input_html: { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= f.input :brithday, input_html: { class: "form-control datetimepicker4" } %>
        </div>

        <div class="form-group">
          <%= f.input :handphone, input_html: { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= f.input :status, input_html: { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= f.input :role, as: :select, collection: ["User", "Admin", "Moderator"], required: true, input_html: { class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.input :country, :collection => CS.countries.invert, input_html: { class: "form-control country-dropdown" } %>
        </div>
         
        <div class="form-group">
          <%= f.input :province, :collection => [], input_html: { class: "form-control province-dropdown" } %>
        </div>

        <div class="form-group">
          <%= f.input :city, :collection => [], input_html: { class: "form-control city-dropdown" } %>
        </div>
        
        <div class="form-group">
          <%= f.input :neighborhood, input_html: { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= f.input :address, input_html: { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= f.input :password, autocomplete: "off", input_html: { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= f.input :password_confirmation, autocomplete: "off", input_html: { class: "form-control" } %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
          <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-default" %>
        </div>
      <% end %><br />

      <%= render "devise/shared/links" %>
